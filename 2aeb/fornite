programa {
	
	funcao inicio() {
	
		real Figura1, Figura2
		real Vbucks = 0
		escreva("Digite o valor do primeiro item \n")
		leia(Figura1)
		escreva("Digite o valor do segundo item \n")
		leia(Figura2)
		Vbucks = Figura1 + Figura2
		escreva("olhe o valor  \n")
		escreva(Vbucks)
		escreva("\n")
		escreva("Com desconto de 30% fica com esse valor\n")
		escreva(Vbucks * 0.70)
		
	}
}
